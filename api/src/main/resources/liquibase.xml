	<changeSet id="CSM-58-120620141637" author="k-joseph">
		<preConditions onFail="MARK_RAN">
         	<not><tableExists tableName="chartsearch_sub_categories"/></not>
        </preConditions>
        <comment>
        	Create chartsearch_sub_categories table
        </comment>
		<createTable tableName="chartsearch_sub_categories">
